# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=7d

# Database Configuration
DATABASE_URL=postgres://username:password@localhost:5432/inventory_db
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=inventory_system

# Google Maps API (optional - for mapping features)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Mapbox API (optional - alternative mapping service)
MAPBOX_API_KEY=your-mapbox-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Investment Services (for trading robots)
COINBASE_API_KEY=your-coinbase-api-key
ROBINHOOD_API_KEY=your-robinhood-api-key
VANGUARD_API_KEY=your-vanguard-api-key

# Coinbase Commerce Configuration
COINBASE_COMMERCE_API_KEY=your-coinbase-commerce-api-key
COINBASE_COMMERCE_WEBHOOK_SECRET=your-coinbase-commerce-webhook-secret

# OAuth2 Configuration
COINBASE_CLIENT_ID=your-coinbase-oauth-client-id
COINBASE_CLIENT_SECRET=your-coinbase-oauth-client-secret
COINBASE_CALLBACK_URL=http://localhost:3000/api/crypto/oauth/coinbase/callback

BINANCE_CLIENT_ID=your-binance-oauth-client-id
BINANCE_CLIENT_SECRET=your-binance-oauth-client-secret
BINANCE_CALLBACK_URL=http://localhost:3000/api/crypto/oauth/binance/callback

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# File Upload (for item images)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=inventory-images
AWS_REGION=us-east-1

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id

# Development Settings
DEBUG=true
LOG_LEVEL=debug

# Redis Configuration
REDIS_URL=redis://:redis_password@redis:6379

# File Upload Configuration
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10485760

# Backup Configuration
BACKUP_LOCAL_PATH=/app/backups
BACKUP_ENCRYPTION_KEY=your_32_byte_encryption_key_here

# Warehouse Configuration
WAREHOUSE_PATH=/app/warehouse
WAREHOUSE_ENCRYPTION_KEY=your_32_byte_warehouse_key_here

# AWS Configuration (for cloud storage)
AWS_S3_REGION=us-east-1
AWS_S3_BACKUP_BUCKET=inventory-backups
AWS_S3_WAREHOUSE_BUCKET=inventory-warehouse
AWS_GLACIER_VAULT=inventory-archive

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://frontend:3000

# Frontend Configuration
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_WS_URL=ws://localhost:3001

# React Native Configuration
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_WS_URL=ws://localhost:3001

# Nginx Configuration
NGINX_SSL_CERT=/etc/nginx/ssl/cert.pem
NGINX_SSL_KEY=/etc/nginx/ssl/key.pem

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3003 